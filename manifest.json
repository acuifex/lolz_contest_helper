{
  "manifest_version": 2,

  "name": "autocontest",
  "version": "1.2",
  "author": "acuifex",
  "background": {
    "scripts": ["packetListener.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://*.lolz.guru/*"],
      "js": ["contest.js"],
      "run_at": "document_end"
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "lolz_contest_helper_extension@example.org",
      "strict_min_version": "42.0"
    }
  },

  "host_permissions": [
    "*://*.lolz.guru/*"
  ],
  "options_ui": {
    "page": "settings.html",
    "browser_style": true
  },
  "permissions": [
    "activeTab",
    "*://answers.acuifex.ru/query.php",
    "tabs", "<all_urls>", "webRequest", "webRequestBlocking", "storage"
  ]
}